@using Microsoft.AspNet.Identity
@using CodeEditorApp.Models
@model CodeEditorApp.Models.ContactViewModel

<div>
    <h4>Contact us!</h4>
    <div class="col-md-6">
        <div>
            @if (ViewBag.Message == null)
            {
                <div>
                    <form method="post">
                        <div class="form-group">
                            <input asp-for="Name" class="form-control" placeholder="User Name / Name" />
                            <span asp-validation-for="Name" class="text-muted"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Email" class="form-control" placeholder="Email" />
                            <span asp-validation-for="Email" class="text-muted"></span>
                        </div>
                        <div class="form-group">
                            <textarea rows="5" cols="15" asp-for="Message" class="form-control" placeholder="Type your message here..."></textarea>
                            <span asp-validation-for="Message" class="text-muted"></span>
                        </div>
                        <div>
                            <button type="submit" class="btn btn-success">Send</button>
                        </div>
                    </form>
                </div>
            }
        </div>

        <div>
            <div>
                @if (ViewBag.Message != null)
                {
                    <div>@ViewBag.Message</div>
                }
            </div>
        </div>
    </div>
</div>

