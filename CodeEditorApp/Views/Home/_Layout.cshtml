<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Lato:400i|Lusitana" rel="stylesheet">
    <title>@ViewBag.Title - CollabCode</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/Custom")



    <style type="text/css" media="screen">
    /*    #explorer{
            height: 600px;
            width: 20%;
            float: left;
        }
        #editor {
            height: 90%;
            width: 80%;
        }*/
    </style>
   
    @using Microsoft.AspNet.Identity
    @using CodeEditorApp.Models


</head>
<!--The layout of the website for a person that is not logged in-->
<body class="container-fluid">
    <header class="navbar navbar-fixed-top container padding-for-container dark-background">
        <div class="header-flex-container navbar-left">
            <div> <img class="logo" src="../images/logo.png" alt="CC" "></div>
            <div>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "light-textcolor h1" })</div>
        </div>
        <div class="collapse navbar-collapse navbar-right">
            <div class="collapse navbar-collapse navbar-right">

                @if (Request.IsAuthenticated)
                {
                    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                    {
                        @Html.AntiForgeryToken()
                        <ul class="nav navbar-nav l-heading-home">
                            <!--vantar hér réttan link-->
                            <li>@Html.ActionLink("About", "About", "Home", new { @class = "light-textcolor" })</li>
                            <li>@Html.ActionLink("Help", "Help", "Home", new { @class = "light-textcolor" }) </li>
                            <li>
                                @Html.ActionLink("View your projects", "Index", "UserHome", routeValues: null, htmlAttributes: new { title = "Your Projects", @class = "light-textcolor" })
                            </li>
                            <li><a class="light-textcolor" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                        </ul>
                    }
                }
                else
                {
                    <ul class="nav navbar-nav l-heading-home">
                        <li>@Html.ActionLink("About", "About", "Home", new { @class = "light-textcolor" })</li>
                        <li>@Html.ActionLink("Help", "Help", "Home", new { @class = "light-textcolor" }) </li>

                    </ul>
                }

            </div>
  
        </div>
    </header>

    <!--the body of home page-->
    <div class="home-body-content light-background">  

            @RenderBody()      
    </div>
    <!--End of body of home page-->

    <footer class="navbar-fixed-bottom padding-for-container text-home dark-background">
        @Html.ActionLink("The Team", "Team", "Home", new { @class = "light-textcolor" })
        @Html.ActionLink("Terms and conditions", "Terms", "Home", new { @class = "light-textcolor" })
        @Html.ActionLink("FAQ", "About", "Home", new { @class = "light-textcolor" })
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/Custom.js"></script>
    
</body>
</html>
