<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CollabCode</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<!--The layout of the website for a person that is not logged in-->
<body class="container">
    <header class="navbar navbar-fixed-top container padding-for-container">
        <div class="header-flex-container navbar-left">
            <div> <img class="logo" src="../images/logo.png" alt="Mountain View" "></div>
            <div>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</div>
        </div>
        <div class="collapse navbar-collapse navbar-right">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("About", "About", "Home")</li>
                <li>@Html.ActionLink("Help", "Contact", "Home")
            </ul>   
        </div>
    </header>
    <!--the body of -->
    <div class="row container body-content padding-for-container">  
            @RenderBody()      
    </div>

    <footer class="navbar navbar-fixed-bottom padding-for-container">
            @Html.ActionLink("About", "About", "Home")
            @Html.ActionLink("Help", "Contact", "Home")
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
