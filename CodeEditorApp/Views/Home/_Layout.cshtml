<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Lato:400i|Lusitana" rel="stylesheet">
    <title>@ViewBag.Title - CollabCode</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/js_modal.js")
    @using Microsoft.AspNet.Identity
    @using CodeEditorApp.Models
</head>

<!--The layout of the website for a person that is not logged in-->
<body class="container-fluid">
    <header class="navbar navbar-fixed-top container padding-for-container dark-background">
        <div class="header-flex-container navbar-left">
            <div> <img class="logo" src="../images/logo-hvitt.png" alt="CC" "></div>
            <div>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "color-textcolor h1" })</div>
        </div>
        <div class="collapse navbar-collapse navbar-right">
            <div class="collapse navbar-collapse navbar-right">

                @if (Request.IsAuthenticated)
                {
                    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                    {
                        @Html.AntiForgeryToken()
                        <ul class="nav navbar-nav l-heading-home">
                            <li>@Html.ActionLink("Your Projects", "Index", "UserHome", routeValues: null, htmlAttributes: new { @class = "color-textcolor" })</li>
                            <li><a class="color-textcolor" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                        </ul>
                    }
                }
            </div>
  
        </div>
    </header>

    <!--the body of home page-->
    <div class="home-body-content light-background">  

            @RenderBody()      
    </div>
    <!--End of body of home page-->

    <footer class="navbar-fixed-bottom padding-for-container text-home dark-background">
        @Html.ActionLink("Terms and conditions", "Terms", "Home", new { @class = "color-textcolor" })
        @Html.ActionLink("FAQ", "About", "Home", new { @class = "color-textcolor" })
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/js_modal.js"></script>
    
</body>
</html>
