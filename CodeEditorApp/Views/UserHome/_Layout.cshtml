<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CollabCode</title>
    <!--    Tveir utanaðkomandi     -->
    <!--
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style type="text/css" media="screen">
        /*#explorer {
            height: 600px;
            width: 20%;
            float: left;
        }*/

        #editor {
            height: 90%;
            width: 100%;
        }
        #color {
            width: 20%;
            float: left;
        }
        #syntax{
            width: 90%;            
        }

    </style>

</head>
<!--The layout of the website for a logged in person-->
<body class="container-fluid">
    <header class="navbar navbar-fixed-top container padding-for-container">
        <div class="header-flex-container navbar-left">
            <div> <img class="logo" src="../images/logo3.PNG" alt="Mountain View"></div>
            <!--vantar hér réttan link-->
            <div>@Html.ActionLink("Home", "Index", "UserHome", new { area = "" }, new {@class = "navbar-brand name" })</div>
        </div>
        <div class="collapse navbar-collapse navbar-right">
            <ul class="nav navbar-nav l-heading-home">
                <!--vantar hér réttan link-->
                <li>@Html.ActionLink("project", "Index", "Project")</li>
            </ul>
        </div>
    </header>

    <!--the body of logged in page-->
    <div class="user-body-content">
        @RenderBody()
    </div>
    <!--End of body of logged in page-->
        
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @RenderSection("scriptsComment", required: false)
</body>
</html>
